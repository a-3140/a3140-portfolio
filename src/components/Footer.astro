---
import type { SiteConfig } from "@types";

type Props = Pick<SiteConfig, "author" | "socialLinks">;

const { author, socialLinks } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer
  class="w-full border-t border-slate-200 px-5 pt-5 pb-8 text-center text-slate-700"
>
  <ul class="mb-5 flex flex-wrap justify-center gap-x-5 text-xs">
    {
      socialLinks.map(({ text, href }) => (
        <li>
          <a
            href={href}
            target="_blank"
            class="inline-block px-4 py-3 text-slate-600 hover:text-blue-600 transition-colors duration-200 after:relative after:bottom-[-4px] after:ml-1 after:content-[url(/external.svg)]"
          >
            {text}
          </a>
        </li>
      ))
    }
  </ul>
</footer>
